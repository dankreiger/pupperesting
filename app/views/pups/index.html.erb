<div id="pups" class="transitions-enabled">
  <% @pups.each do |pup| %>
    <div class="box panel panel-default">
      <%= link_to image_tag(pup.image.url(:medium)), pup %>
      <div class="panel-body">
        <%= pup.description %><br/>
        <strong><%= pup.user.email if pup.user %></strong>
        <% if pup.user == current_user %>
          <div class="actions">
            <%= link_to 'Edit', edit_pup_path(pup) %>
            <%= link_to 'Destroy', pup, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>